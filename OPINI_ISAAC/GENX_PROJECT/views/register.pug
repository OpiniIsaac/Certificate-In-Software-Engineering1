doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel="stylesheet", href="css/style.css")
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  script(src='js/validate.js')
  title Document
form.container(method='post' action='/signup' onsubmit="return Validate();")
  h1.text-center.text-white.bg-dark GENX KYC FORM
  fieldset
    legend Bio Data
    .row
      .col.d-flex.flex-column.form-group
        input#firstName(type='text' name='firstName' placeholder='First Name')
      .col.d-flex.flex-column.form-group
        input#lastName(type='text' name='lastName' placeholder='last Name')
    .row
      .col.d-flex.flex-column.form-group
        input#dob(type='date' name='dob' placeholder='Date of Birth')
      .col.d-flex.flex-column.form-group
        select#gender(name='gender')
          option(value='' name='gender') -- Select Gender --
          option(value='male' name='gender') male
          option(value='female' name='gender') female
  fieldset
    legend Location
    .row
      .col.d-flex.flex-column.form-group
        select#country(name='country')
          option(value='' name='country') --select country--
          option(value='Uganda' name='country') Uganda
          option(value='Kenya' name='country') Kenya
          option(value='Tanzania' name='country') Tanzania
          option(value='South Sudan' name='country') South Sudan
          option(value='Rwanda' name='country') Rwanda
          option(value='Burundi' name='country') Burundi
      .col.d-flex.flex-column.form-group
        input#state(type='text' name='state' placeholder='state/District')
    .row
      .col.d-flex.flex-column.form-group
        input#town(type='text' name='town' placeholder='town')
      .col.d-flex.flex-column.form-group
        input#zipCode(type='text' name='zipCode' placeholder='Zip Code')
    legend Contacts and Address
    .row
      .col.d-flex.flex-column.form-group
        input#phoneNumber1(type='text' name='phoneNumber1' placeholder='phone Number')
      .col.d-flex.flex-column.form-group
        input#phoneNumber2(type='text' name ='phoneNumber2' placeholder='Phone Number 2')
    .row
      .col.d-flex.flex-column.form-group
        input#email(type='email'  name ='email' placeholder='email')
    .row
      .col.d-flex.flex-column.form-group
  .row
    .col.d-flex.flex-column.form-group
    .col.d-flex.flex-column.form-group
      button.btn.btn-warning(type='submit') Submit

script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
